FC = gfortran
USERDIR   = ./example
MODELFILE = $(USERDIR)/kaleu_modelfile
USERFILE  = $(USERDIR)/kaleu_userfile
RNGFILE   = $(USERDIR)/kaleu_random
LIBRARY   = libkaleu_example.a

FFLAGS = -O 

SRCDIR = ./src
# VRSDIR=v0 means that only "leading-order" phase space above LO cuts
# is completely populated.
VRSDIR = ./src/v0
BUILD  = ./build

%.o : %.f90
	$(FC) $(FFLAGS) -I$(USERDIR) -c  $*.f90 -o $*.o 

.f.o: 
	$(FC) $(FFLAGS) -I$(USERDIR) -c $*.f -o $*.o 

OBJECTS = \
          $(RNGFILE).o  \
          $(BUILD)/avh_bint.o  \
          $(BUILD)/avh_print.o  \
          $(BUILD)/kaleu_grid.o  \
          $(BUILD)/kaleu_model.o  \
          $(BUILD)/kaleu_tree.o  \
          $(BUILD)/kaleu_strf.o  \
          $(BUILD)/kaleu_kinem.o  \
          $(BUILD)/kaleu_mulcha.o  \
          $(BUILD)/kaleu_ranvar.o  \
          $(BUILD)/kaleu_vertex.o  \
          $(BUILD)/kaleu.o  \
          $(MODELFILE).o  \
          $(USERFILE).o

MODFILES = \
          ./avh_bint.mod  \
          ./avh_print.mod  \
          ./avh_kaleu_grid.mod  \
          ./avh_kaleu_model.mod  \
          ./avh_kaleu_tree.mod  \
          ./avh_kaleu_strf.mod  \
          ./avh_kaleu_kinem.mod  \
          ./avh_kaleu_mulcha.mod  \
          ./avh_kaleu_ranvar.mod  \
          ./avh_kaleu_vertex.mod  \
          ./avh_kaleu.mod

all:		copy $(LIBRARY) clean

copy: 
	cp $(SRCDIR)/*.f90 $(BUILD)
	cp $(VRSDIR)/*     $(BUILD)

$(LIBRARY):	$(OBJECTS)
		ar cru $(LIBRARY) $(OBJECTS)
		ranlib $(LIBRARY)

clean:;	rm -f $(OBJECTS) $(MODFILES) *.mod
