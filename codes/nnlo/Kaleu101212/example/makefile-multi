FC = gfortran

CONSTANTS = ee

RNG = ranlux

KALEUHOME = ..
KALEULIB = kaleu_example

FFLAGS = 

FILE = psvol-multi

all: copy a.out;

%.o : %.f90
	$(FC) $(FFLAGS) -c $*.f90 -o $*.o 

.f.o: 
	$(FC) $(FFLAGS) -c $*.f -o $*.o 

OBJECTS = \
          $(RNG).o \
          ./particles.o \
          ./rambo.o \
          ./cuts-my.o \
          ./$(FILE).o

a.out: $(OBJECTS) 
	$(FC) $(FFLAGS) -o $(FILE).exe $(OBJECTS) \
	-L$(KALEUHOME) -l$(KALEULIB)

copy:
	cp constants_$(CONSTANTS).h90 constants.h90

clean:;	rm $(OBJECTS) *.mod *.exe

cuts.o: cuts.h90
montecarlo.o: constants.h90
